#!/bin/bash

PYTHONUNBUFFERED=true gunicorn \
    --user ctf \
    --group ctf \
    --bind 0.0.0.0:${RPC_PORT:-1337} \
    --daemon \
    --workers 1 \
    --threads 1 \
    --access-logfile /var/log/ctf/gunicorn.access.log \
    --error-logfile /var/log/ctf/gunicorn.error.log \
    --capture-output \
    --log-level debug \
    eth_sandbox.server:app
